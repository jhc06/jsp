<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 세션 유효 시간 설정 -->
    <session-config>
        <session-timeout>50</session-timeout> <!-- 최근 접근 시간 이후 ?분 이후 세션 종료 -->
    </session-config> <!-- 0이나 음수 설정 시 세션은 유효기간을 가지지 않는다.(Infinity) -->


    <!-- poolConfig -->
    <context-param>
        <param-name>poolConfig</param-name>
        <param-value>
            jdbcDriver=oracle.jdbc.driver.OracleDriver
            jdbcUrl=jdbc:oracle:thin:@localhost:1521:XE
            dbUser=C##TEST
            dbPass=oracle
            validationQuery=select 1
            minIdle=3
            maxTotal=30
            poolName=board
        </param-value>
    </context-param>

    <!-- 인코딩 필터 매핑 및 초기 파라미터 설정 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 로그인 필터 매핑 -->
    <filter>
        <filter-name>LoginCheckFilter</filter-name>
        <filter-class>filter.LoginCheckFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginCheckFilter</filter-name>
        <url-pattern>/change.Pwd.do</url-pattern>
    </filter-mapping>

    <!-- 서블릿 설정 및 웹 컨테이너 처음 구성 시점에 초기화하게 설정 -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controller.Controller</servlet-class>
        <init-param>
            <param-name>configFile</param-name>
            <param-value>/commandHandler.properties</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

</web-app>